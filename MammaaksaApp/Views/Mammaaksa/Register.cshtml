        <div class="">

            <input type="password" name="jecha_icciti" placeholder="Jecha-darbinsaa" required id="myInput" />
        </div>
        <p></p>
        <div class="" id="uame">
            <input id="check3" name="check3" type="Checkbox" value="show password" onclick="myFunction()" />
