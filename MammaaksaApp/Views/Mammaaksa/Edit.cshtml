@model MammaaksaApp.Models.Mamaaksa

@{
    ViewData["Title"] = "Edit";
}

<h1>Deebiisi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="gaaffii" class="control-label"></label>
                <input asp-for="gaaffii" class="form-control" />
                <span asp-validation-for="gaaffii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deebii" class="control-label"></label>
                <input asp-for="deebii" class="form-control" />
                <span asp-validation-for="deebii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Galmeessi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin:300px;">Dubatti Deebi'i</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
